<% if @message %>
  <h2><%= @message %></h2>
<% end %>

<% if @user.admin? %>
  <h1> ADMIN PAGE </h1>
<% end %>

<h1>Welcome to the theme park, <%= @user.name %>!</h1>
<h3>Info:</h3>
<ul>
  <li>Name: <%= @user.name %></li>
  <li>Tickets: <%= @user.tickets %></li>
  <li>Mood: <%= @user.mood %></li>
  <li>Height: <%= @user.height %> inches</li>
</ul><br>
<br>
<p><%= link_to 'Edit', edit_user_path %></p>
<p><%= link_to 'See attractions', attractions_path %></p>

